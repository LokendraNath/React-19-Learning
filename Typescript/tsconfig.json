{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "noEmitOnError": false,
    "sourceMap": false
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
